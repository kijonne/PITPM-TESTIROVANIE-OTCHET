// ========== –ü–û–ò–°–ö –ó–ê–î–ê–ß –ü–û –°–¢–ê–¢–£–°–£ ==========
app.MapGet("/todos/by-status/{status}", (Status status) =>
{
    var filtered = todosForMinimalApi
        .Where(t => t.Status == status)
