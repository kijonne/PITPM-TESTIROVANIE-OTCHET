üìã –î–æ–±–∞–≤—å—Ç–µ —Å—Ö–µ–º—É TodoItem –≤ Swagger (–≤ Program.cs –ø–æ—Å–ª–µ builder.Services.AddSwaggerGen):

```csharp
builder.Services.AddSwaggerGen(options =>
{
    // ... –≤–∞—à–∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ ...
    
    // –î–æ–±–∞–≤—å—Ç–µ —Å—Ö–µ–º—É TodoItem
    options.MapType<TodoItem>(() => new Microsoft.OpenApi.Models.OpenApiSchema
    {
        Type = "object",
        Properties = new Dictionary<string, Microsoft.OpenApi.Models.OpenApiSchema>
        {
            ["id"] = new() 
            { 
                Type = "integer", 
                Format = "int32",
                Description = "–£–Ω–∏–∫–∞–ª—å–Ω—ã–π –∏–¥–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ç–æ—Ä –∑–∞–¥–∞—á–∏",
                ReadOnly = true
            },
            ["name"] = new() 
            { 
                Type = "string", 
                Description = "–ù–∞–∑–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏",
                MinLength = 1
            },
            ["description"] = new() 
            { 
                Type = "string", 
                Description = "–û–ø–∏—Å–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏",
                Nullable = true
            },
            ["dueDate"] = new() 
            { 
                Type = "string", 
                Format = "date-time",
                Description = "–°—Ä–æ–∫ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –∑–∞–¥–∞—á–∏"
            },
            ["status"] = new() 
            { 
                Type = "integer",
                Description = "–°—Ç–∞—Ç—É—Å –∑–∞–¥–∞—á–∏: 0 - Pending, 1 - InProgress, 2 - Completed",
