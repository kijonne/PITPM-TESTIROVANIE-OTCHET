app.MapPost("/todos", (TodoItem item) =>
{
    if (string.IsNullOrWhiteSpace(item.Name))
        return Results.BadRequest(new { message = "–ù–∞–∑–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ" });
    
    item.Id = todosForMinimalApi.Max(t => t.Id) + 1;
    todosForMinimalApi.Add(item);
    
    return Results.Created($"/todos/{item.Id}", item);
})
.WithName("CreateTodo")
.WithTags("Todos")
.Accepts<TodoItem>("application/json")
.Produces<TodoItem>(StatusCodes.Status201Created)
.Produces(StatusCodes.Status400BadRequest)
.WithOpenApi(operation =>
{
    operation.Summary = "–°–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤–æ–π –∑–∞–¥–∞—á–∏";
    operation.Description = "–î–æ–±–∞–≤–ª—è–µ—Ç –Ω–æ–≤—É—é –∑–∞–¥–∞—á—É –≤ —Å–∏—Å—Ç–µ–º—É";
    
    operation.RequestBody = new Microsoft.OpenApi.Models.OpenApiRequestBody
    {
        Description = "–î–∞–Ω–Ω—ã–µ –Ω–æ–≤–æ–π –∑–∞–¥–∞—á–∏",
        Required = true,
        Content = new Dictionary<string, Microsoft.OpenApi.Models.OpenApiMediaType>
        {
            ["application/json"] = new()
            {
                Schema = new()
                {
                    Reference = new() 
