app.MapPut("/todos/{id}", (int id, TodoItem item) =>
{
    if (item == null || item.Id != id)
        return Results.BadRequest(new { message = "–ù–µ–≤–µ—Ä–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ" });
    
    var existing = todosForMinimalApi.FirstOrDefault(t => t.Id == id);
    if (existing == null)
        return Results.NotFound(new { message = $"–ó–∞–¥–∞—á–∞ —Å ID {id} –Ω–µ –Ω–∞–π–¥–µ–Ω–∞" });
    
    existing.Name = item.Name;
    existing.Description = item.Description;
    existing.DueDate = item.DueDate;
    existing.Status = item.Status;
    
    return Results.Ok(existing);
})
.WithName("UpdateTodo")
.WithTags("Todos")
.Accepts<TodoItem>("application/json")
.Produces<TodoItem>(StatusCodes.Status200OK)
.Produces(StatusCodes.Status400BadRequest)
.Produces(StatusCodes.Status404NotFound)
.WithOpenApi(operation =>
{
    operation.Summary = "–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—É—â–µ—Å—Ç–≤—É—é—â–µ–π –∑–∞–¥–∞—á–∏";
    operation.Description = "–û–±–Ω–æ–≤–ª—è–µ—Ç –¥–∞–Ω–Ω—ã–µ –∑–∞–¥–∞—á–∏ —Å —É–∫–∞–∑–∞–Ω–Ω—ã–º ID";
    
    operation.Parameters.Clear();
    operation.Parameters.Add(new()
    {
        Name = "id",
        In = Microsoft.OpenApi.Models.ParameterLocation.Path,
        Description = "–ò–¥–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ç–æ—Ä –æ–±–Ω–æ–≤–ª—è–µ–º–æ–π –∑–∞–¥–∞—á–∏",
        Required = true,
        Schema = new() { Type = "integer", Minimum = 1 }
    });
    
    operation.RequestBody = new Microsoft.OpenApi.Models.OpenApiRequestBody
    {
        Description = "–ù–æ–≤—ã–µ –¥–∞–Ω–Ω—ã–µ –∑–∞–¥–∞—á–∏",
        Required = true,
        Content = new Dictionary<string, Microsoft.OpenApi.Models.OpenApiMediaType>
        {
            ["application/json"] = new()
            {
                Schema = new()
                {
                    Reference = new() 
                    { 
                        Id = "TodoItem", 
                        Type = Microsoft.OpenApi.Models.ReferenceType.Schema 
                    }
                }
            }
        }
    };
    
    return operation;
});

// ========== –£–î–ê–õ–ï–ù–ò–ï –ó–ê–î–ê–ß–ò ==========
app.MapDelete("/todos/{id}", (int id) =>
{
    var todo = todosForMinimalApi.FirstOrDefault(t => t.Id == id);
    if (todo == null)
        return Results.NotFound(new { message = $"–ó–∞–¥–∞—á–∞ —Å ID {id} –Ω–µ –Ω–∞–π–¥–µ–Ω–∞" });
    
