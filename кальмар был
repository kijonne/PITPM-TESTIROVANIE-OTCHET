                Example = new Microsoft.OpenApi.Any.OpenApiObject
                {
                    ["name"] = new Microsoft.OpenApi.Any.OpenApiString("–ù–æ–≤–∞—è –∑–∞–¥–∞—á–∞"),
                    ["description"] = new Microsoft.OpenApi.Any.OpenApiString("–û–ø–∏—Å–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏"),
